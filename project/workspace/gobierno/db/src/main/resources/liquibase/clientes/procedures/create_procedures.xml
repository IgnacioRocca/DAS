<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- ***************************** -->
    <!--  DROP PROCEDURES CHANGE-SETS  -->
    <!-- ***************************** -->

    <changeSet id="Drop procedure get_clientes" author="DAS-Team" runAlways="true" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">
                SELECT COUNT(*)
                FROM information_schema.routines
                WHERE ROUTINE_TYPE = 'PROCEDURE'
                AND SPECIFIC_CATALOG = 'db_gobierno'
                AND ROUTINE_NAME = 'get_clientes'
            </sqlCheck>
        </preConditions>
        <dropProcedure procedureName="get_clientes"/>
    </changeSet>

    <changeSet id="Drop procedure log_cliente" author="DAS-Team" runAlways="true" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">
                SELECT COUNT(*)
                FROM information_schema.routines
                WHERE ROUTINE_TYPE = 'PROCEDURE'
                AND SPECIFIC_CATALOG = 'db_gobierno'
                AND ROUTINE_NAME = 'log_cliente'
            </sqlCheck>
        </preConditions>
        <dropProcedure procedureName="log_cliente"/>
    </changeSet>


    <!-- ******************************* -->
    <!--  CREATE PROCEDURES CHANGE-SETS  -->
    <!-- ******************************* -->
    <changeSet id="Create procedure get_clientes" author="DAS-Team" runAlways="true" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM information_schema.routines
                WHERE ROUTINE_TYPE = 'PROCEDURE'
                AND SPECIFIC_CATALOG = 'db_gobierno'
                AND ROUTINE_NAME = 'get_clientes'
            </sqlCheck>
        </preConditions>
        <sqlFile path="/src/main/resources/liquibase/clientes/procedures/get_clientes.sql"/>
    </changeSet>

    <changeSet id="Create procedure log_cliente" author="DAS-Team" runAlways="true" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM information_schema.routines
                WHERE ROUTINE_TYPE = 'PROCEDURE'
                AND SPECIFIC_CATALOG = 'db_gobierno'
                AND ROUTINE_NAME = 'log_cliente'
            </sqlCheck>
        </preConditions>
        <sqlFile path="/src/main/resources/liquibase/clientes/procedures/log_cliente.sql"/>
    </changeSet>

</databaseChangeLog>